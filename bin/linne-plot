#!/usr/bin/octave -qf

arg_list = argv();
wavFile=[arg_list{1} ".wav"]
csvFile=[arg_list{1} "-sampling.csv"]
pngFile=[arg_list{1} ".png"]

[y,fs] = wavread(wavFile);
mono=y(:,1);
subplot(4,1,1),plot(( 1:length(mono)) /fs, mono );
title("Waveform");

data = csvread(csvFile);
timestamp = data(:,1);
zcr = data(:,2);
variance = data(:,3);
ste = data(:,4);

#subplot(2,1,2),plot(( 1:length(d)) / fs, d );

subplot(4,1,2),plot(timestamp , zcr );
title("ZCR");

subplot(4,1,3),plot( timestamp , variance );
title("Spectrum Variance");

subplot(4,1,4),plot( timestamp , ste );
title("Short Time Energy");

print(pngFile,"-dpng");

#input ("Press enter to continue");
